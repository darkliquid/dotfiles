[alias]
	amend = commit --amend --no-edit
	br = branch
	ci = commit
	clean-merged = "!sh -c 'git branch --merged | egrep -v \"(^\\*|master|dev)\" | xargs git branch -d'"
	co = checkout
	co-pr = "!sh -c 'git fetch ${2:-origin} pull/${1}/head:pr-${1} && git checkout pr-${1}' -"
	gerrit-push = "!sh -c 'git push origin HEAD:refs/for/${1:-master}' -"
	gerrit-push-draft = "!sh -c 'git push origin HEAD:refs/drafts/${1:-master}' -"
	gud = "!sh -c 'if [ -z \"$(git remote | grep 'upstream')\" ]; then git rebase origin/master; else git rebase upstream/master; fi'"
	hist = log --pretty=format:\"%C(yellow)%h%Creset %ad %Cred|%Creset %s%d %C(cyan)[%an]%Creset\" --graph --date=short
	since = "!f() { git shortlog ${1:-HEAD~10}...master --grep=^Merge --invert-grep --format=\"* %s (%h)\"; }; f"
	st = status
[branch]
    sort = -committerdate
[color]
	ui = true
[commit]
    verbose = true
	gpgsign = true
[core]
	autocrlf = false
	editor = nvim
	excludesfile = ~/.config/git/gitignore
	fsmonitor = true
	pager = delta
	trustctime = false
	untrackedCache = true
[delta]
	navigate = true
	side-by-side = true
[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true
[fetch]
	prune = true
	pruneTags = true
	all = true
[filter "media"]
	clean = git media clean %f
	required = true
	smudge = git media smudge %f
[help]
    autocorrect = prompt
[include]
	path = ~/.gitconfig.local
[init]
	defaultBranch = main
[interactive]
	diffFilter = delta --color-only --features=interactive
[merge]
	conflictstyle = zdiff3 
[column]
    ui = auto
[pull]
	rebase = true
[push]
	autoSetupRemote = true
	default = simple
	followTags = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[rerere]
	autoupdate = true
    enabled = true
[tag]
    sort = version:refname
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[credential "https://github.com"]
	helper = 
	helper = !mise exec gh -- gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !mise exec gh -- gh auth git-credential
